/* pages/buy/buy.wxss */
page {
    width: 100%;
    height: 100%;
}
.pageBody {
    width: 100%;
    min-height: 100%;
    background: #f0f5f8;
}
.table {
  border: 0px solid darkgray;
  margin-top: 30rpx;
  width: 96%;
  margin-left: 2%;
  background-color: #fff;
  border-radius: 15rpx;
  overflow: hidden;
  margin-bottom: 30rpx;
  box-shadow: 0 0 30rpx #ccc;
}
.tr {
  display: flex;
  width: 100%;
  justify-content: center;
  height: 3rem;
  align-items: center;
  border-bottom: 1px solid #ececec;
}
.td {
    width:25%;
    justify-content: center;
    text-align: center;
    font-size: 28rpx;
    color: #666;
}
.tr .td:first-child {
    width:20%;
}
.tr .td:last-child {
    width:30%;
}
.th {
  width: 25%;
  justify-content: center;
  background: #006cff;
  color: #fff;
  display: flex;
  height: 3rem;
  align-items: center;
  font-size: 14px;
}
.th:first-child {
    width: 20%;
}
.th:last-child {
    width: 30%;
}
.tr:last-child {
    border-bottom: 0;
}
.td text {
    border: 1px solid #e7e7e7;
    border-radius: 20rpx;
    color: #006cff;
    padding: 7rpx 20rpx;
}