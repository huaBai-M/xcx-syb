/* pages/bangding/bangding.wxss */
page {
    width: 100%;
    height: 100%;
}
.pageBody {
    width: 100%;
    min-height: 100%;
    background-color: #f0f5f8;
}
.headImg {
    width: 96%;
    margin-left: 2%;
    background-color: #fff;
    border-radius: 25rpx;
    padding: 0 20rpx;
    margin-top: 20rpx;
    box-sizing: border-box;
}
.msg {
    display: flex;
    flex-grow: grow;
    height: 100rpx;
    align-items: center;
}
.msg input {
    margin-left: 20rpx;
}
.msg .icon-icon_see {
    flex: 1;
    text-align: right;
}
.base-mesg {
    margin-top: 20rpx;
    background-color: #fff;
    border-radius: 25rpx;
    display: flex;
    flex-direction: column;
    box-sizing: border-box;
    padding: 0 0 0 20rpx;
    width: 96%;
    margin-left: 2%;
    /* box-shadow: 0 0 20rpx #ccc; */
}
.base-mesg .msg {
    display: flex;
    justify-items: center;
    align-items: center;
    height: 100rpx;
}
.base-mesg .click {
    color: #0458ff;
    font-size: 12px;
    flex: 1;
    text-align: center;
    background-color: transparent;
    margin-right: 10rpx;
    border-color: transparent;

}
.btns {
    margin: 100px 0;
}
.btns button {
    width: 80%;
    height: 40px;
    font-size: 32rpx;
    color: #fff;
    background-color: #0458ff;
    border-radius: 20px;
    line-height: 40px;
    box-shadow: 0 0 20rpx #7e9cd8;
}