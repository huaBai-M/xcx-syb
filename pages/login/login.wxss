page {
    height: 100%;
}
.pageBody {
    width: 100%;
    min-height: 100%;
    background: #006cff;
}
.logo {
    margin-top: 70rpx;
    text-align: center;
}
.logo image {
    width: 50%;
    height:100rpx;
}
.loginContent {
    width: 94%;
    margin-left: 3%;
    background-color: #fff;
    border-radius: 30rpx;
    padding: 20rpx;
    box-sizing: border-box;
    margin-top: 50rpx;
}
.onTap {
    border: none;
}
.msg {
    width: 100%;
    height: 90rpx;
    border: 1rpx solid #e7e7e7;
    border-radius: 20rpx;
    margin-top: 30rpx;
    display: flex;
    justify-items: center;
    align-items: center;
    box-sizing: border-box;
}
.msg label {
    margin-right: 30rpx;
    color: #333;
    font-size: 34rpx;
    width: 20%;
    text-align: right;
}
.seven {
    margin-top: 20rpx;
    color: #666;
    font-size: 28rpx;
}
.btns {
    margin: 40px 0;
}
.btns button {
    width: 70%;
    height: 40px;
    font-size: 32rpx;
    color: #fff;
    background-color: #0458ff;
    border-radius: 20px;
    line-height: 40px;
    box-shadow: 0 0 20rpx #7e9cd8;
}
