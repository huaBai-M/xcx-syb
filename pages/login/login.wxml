<!--pages/login/login.wxml-->
<page>
    <scroll-view class='pageBody'>
        <view class='logo'>
            <image src='/img/logo_xrsyb.png' mode='aspectFit'></image>
        </view>
        <view class='loginContent'>
            <van-tabs active="{{ active }}" color="#006cff" animated>
                <van-tab title="普通登录">
                    <view class='msg'>
                        <label>手机号</label>
                        <input placeholder="输入您的手机号" placeholder-style="font-size:14px;" />
                    </view>
                    <view class='msg'>
                        <label>密码</label>
                        <input placeholder="输入您的密码" placeholder-style="font-size:14px;" />
                    </view>
                    <view class='seven'>七日内免登陆</view>
                    <view class='btns'>
                        <button>登录进入</button>
                    </view>
                </van-tab>
                <van-tab title="手机动态密码登录">
                    <view class='msg'>
                        <label>手机号</label>
                        <input placeholder="输入您的手机号" placeholder-style="font-size:14px;" />
                    </view>
                    <view class='msg'>
                        <label>验证码</label>
                        <input placeholder="图片验证码" placeholder-style="font-size:14px;" />

                    </view>
                     <view class='msg'>
                        <label>验证码</label>
                        <input placeholder="手机验证码" placeholder-style="font-size:14px;" />
                    </view>
                    <view class='btns'>
                        <button>登录进入</button>
                    </view></van-tab>
            </van-tabs>
        </view>
    </scroll-view>
</page>