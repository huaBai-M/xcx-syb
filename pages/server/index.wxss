/* pages/server/index.wxss */
@import "../../font/iconfont.wxss";
page {
    width: 100%;
    height: 100%;
}
.pageBody {
    width: 100%;
    min-height: 100%;
    background-color: #f0f5f8;
}
.content {
    text-align: center;
    width: 96%;
    margin-left: 2%;
    background-color: #fff;
    margin-top: 32rpx;
    border-radius: 30rpx;
    padding: 25rpx;
    box-sizing: border-box;
    box-shadow: 0 0 20rpx #e7e7e7;
}
.content image{
   width: 120rpx;
   height: 120rpx;
}
.content button {
    width: 35%;
    height: 50rpx;
    line-height: 50rpx; 
}
.borderV {
    border: 1px solid #eff5fa;
    border-radius: 25rpx;
    padding-top: 40rpx;
    overflow: hidden;
    position: relative;
}
.content .name {
    color: #666;
    font-size: 30rpx;
}
.content .know,
.content .now {
    border-radius: 30px;
    background-color: #eff5fa;
    border: 1px solid #006cff; 
    font-size: 28rpx;
    color: #006cff;
    padding: 7rpx 30rpx;
}
.content .now {
    margin-left: 50rpx;
    background-color: #d5e5f2;
    color: #7285a2;
    border: 1px solid #d5e5f2;
}
.content .btns {
    height: 90rpx;
    width: 100%;
    line-height: 90rpx;
    margin-top: 30rpx;
    background-color: #eff5fa;
}
.borderV .service {
    position: absolute;
    right: 0;
    top: 40rpx;
    width: 190rpx;
    border-radius: 30rpx 0 0 30rpx;
    background: linear-gradient(to right, #cfe8ff , #ccdaff);
    color: #0084ff;
    font-size: 28rpx;
    padding: 10rpx;
}
.service image {
    width: 30rpx;
    height: 30rpx;
    float: left;
    margin-top: 5rpx;
    margin-left: 8rpx;
}
.addBorder {
    color: #006cff;
    padding: 65rpx 0;
}
.addBorder .iconfont {
    font-size: 100rpx;
}
.addBorder .title {
    font-size: 30rpx;
    margin-top: 20rpx;
}
.content:last-child {
    margin-bottom: 50rpx;
}
.borderV  .serviceH {
    color: #96badb;
    background: linear-gradient(to right, #e9f1f8 , #d5e2ee);
}
.van-tab {
    color: #666;
}