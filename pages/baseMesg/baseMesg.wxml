<!--pages/baseMesg/baseMesg.wxml-->
<page>
    <scroll-view class='pageBody'>
        <!-- 头像 -->
        <view class='headImg'>
           头像
           <view class='img'><image src='{{msgs.headUrl}}' mode='scaleToFill'></image></view>
        </view>
        <view class='base-mesg'>
           <view class='msg' url="../updateMesg/updateMesg" hover-class="navigator-hover"><label>手机号/账号</label><input type='text' disabled value='{{msgs.phone}}'/></view>
            <view class='msg' url="../updateMesg/updateMesg" hover-class="navigator-hover"><label>联系人</label><input type='text' disabled value='{{msgs.name}}'/></view>
            <navigator class='msg msg1' url="../updateMesg/updateMesg" hover-class="navigator-hover"><label>公司名称</label><input type='text' disabled value='{{msgs.company}}'/><text class='rr'> > </text></navigator>
            <navigator class='msg msg1' url="../updateMesg/updateMesg" hover-class="navigator-hover"><label>服务电话</label><input type='text' disabled value='{{msgs.serPhone}}'/><text class='rr'> > </text></navigator>
            <navigator class='msg msg1' url="../updateMesg/updateMesg" hover-class="navigator-hover"><label>公司网址</label><input type='text' disabled value='{{msgs.web}}'/><text class='rr'> > </text></navigator>
            <navigator class='msg msg1' url="../updateMesg/updateMesg" hover-class="navigator-hover"><label>企业邮箱</label><input type='text' disabled value='{{msgs.email}}'/><text class='rr'> > </text></navigator>
            <navigator class='msg msg1' url="../updateMesg/updateMesg" hover-class="navigator-hover"><label>地址</label><input type='text' disabled value='{{msgs.address}}'/><text class='rr'> > </text></navigator>
        </view>
        <view class='base-mesg'>
            <navigator class='msg msg1' url="../updateMesg/updateMesg" hover-class="navigator-hover"><label>行业</label><input type='text' disabled value='{{msgs2.industry}}'/><text class='rr'> > </text></navigator>
            <navigator class='msg msg1' url="../updateMesg/updateMesg" hover-class="navigator-hover"><label>经营范围</label><input type='text' disabled value='{{msgs2.range}}'/><text class='rr'> > </text></navigator>
        </view>
    </scroll-view>
</page>

